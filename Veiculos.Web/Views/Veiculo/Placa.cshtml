
@{
    ViewBag.Title = "Placa";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-lg-offset-1">
            <section id="IdBuscarVeículo">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Buscar Veículo
                        </h3>
                    </div>

                    <div class="panel-body">
                        <div class="row center-block">
                            @using (Html.BeginForm("Pesquisar", "Veiculo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.Hidden("controlador", (string)ViewBag.Controlador)
                                @Html.Hidden("acao", (string)ViewBag.Acao)
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.Label("Placa", null, new { @class = "col-md-2 control-label" })
                                    <div class="col-xs-10">
                                        @Html.ValidationMessage("placa", null, new { @class = "text-danger" })

                                        @Html.TextBox("placa", null, new { @class = "form-control", @name = "placa" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-xs-10">
                                        <input type="submit" value="Pesquisar" class="btn btn-default" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

