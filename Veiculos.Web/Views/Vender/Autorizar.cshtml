
@{
    ViewBag.Title = "Autorizar Venda";
}


<script>
    $(document).ready(function () {
        $("#demoGrid").DataTable({

            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 5,

            "ajax": {
                "url": "/Vender/CarregarAutorizacao",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                },               
                {
                    "targets": [7],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [8],
                    "searchable": false,
                    "orderable": false
                }],

            "columns": [
                { "data": "Id", "name": "Id", "autoWidth": true },
                { "data": "Data", "name": "Data", "autoWidth": true },
                { "data": "Fabricante", "name": "Fabricante", "autoWidth": true },
                { "data": "Modelo", "title": "Modelo", "name": "Modelo", "autoWidth": true },
                { "data": "Placa", "name": "Placa", "autoWidth": true },
                { "data": "Vendedor", "name": "Placa", "autoWidth": true },
                { "data": "Valor", "name": "Valor", "autoWidth": true },

                {
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-info" href="/Vender/AutorizarVenda/' + full.Id + '">Autorizar</a>';
                    }
                },

                {
                    data: null, render: function (data, type, row) {
                        return '<a class="btn btn-danger" href="/Vender/ExcluirVenda/' + row.Id + '">Excluir</a>';
                    }
                },

            ]

        });
    });
</script>


<div class="container">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-10 centered">
            <section id="IdAutorizarVenda">

                <div class="panel panel-default" style="margin-top:3% !important;">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Autorizar Venda
                        </h3>
                    </div>
                    <div class="panel-body">

                        <div class="row center-block">
                            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                                <thead>
                                    <tr style="text-align:center;">
                                        <th>Id</th>
                                        <th>Data</th>
                                        <th>Fabricante</th>
                                        <th>Modelo</th>
                                        <th>Placa</th>
                                        <th>Vendedor</th>
                                        <th>Valor</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
