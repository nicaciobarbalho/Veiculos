@using Veiculos.Web.Models
@model VeiculoModel
@{
    ViewBag.Title = "Veiculo";
}

<style>
    .well {
        background-color: white;
        margin-bottom: 3px;
        padding: 3px;
    }

    label {
    }

    .right {
        font-weight: normal !important;
    }

    .left {
        font-weight: bold !important;
        text-transform: uppercase;
    }
</style>


<div class="container">
    <div class="row">        
            <div class="col-md-8 col-lg-offset-1">
                <section id="IdCadastrarVeiculo">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Cadastrar Veículo
                            </h3>
                        </div>

                        <div class="panel-body">
                            <div class="row center-block">
                                @using (Html.BeginForm("Veiculo", "Cadastrar", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "submitForm", enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.Hidden("origemFormulario", (string)ViewBag.OrigemFormulario)
                                    <div class="form-group">
                                        <div class="col-sm-3 control-label" style="text-align:left;">
                                            @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "left" })
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger", })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-3 control-label" style="text-align:left;">
                                            @Html.Label("", "Modelo", htmlAttributes: new { @class = "left" })
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.DropDownListFor(model => model.IdModelo, ViewBag.IdModelo as SelectList, htmlAttributes: new { @class = "form-control" })                                           
                                            @Html.ValidationMessageFor(model => model.IdModelo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-3 control-label" style="text-align:left;">
                                            @Html.Label("", "Fabricante", htmlAttributes: new { @class = "left" })
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.DropDownListFor(model => model.IdFabricante, ViewBag.IdFabricante as SelectList, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.IdFabricante, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-3 control-label" style="text-align:left;">
                                            @Html.LabelFor(model => model.Ano, htmlAttributes: new { @class = "left" })
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Ano, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Ano, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-3 control-label" style="text-align:left;">
                                            @Html.LabelFor(model => model.Cilindradas, htmlAttributes: new { @class = "left" })
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Cilindradas, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Cilindradas, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-3 control-label" style="text-align:left;">
                                            @Html.LabelFor(model => model.Chassi, htmlAttributes: new { @class = "left" })
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Chassi, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Chassi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-3 control-label" style="text-align:left;">
                                            @Html.LabelFor(model => model.Imagem, htmlAttributes: new { @class = "left" })
                                        </div>
                                        <div class="col-sm-9">                                            
                                            @Html.TextBoxFor(m => m.Imagem, new { @type = "file", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Imagem, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-xs-10">
                                            <input type="submit" value="Salvar" class="btn btn-default" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                </section>
            </div>
        </div>
</div>



